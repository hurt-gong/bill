	<dubbo:reference id="sectionModule" interface="cn.yu2.baomihua.manage.module.ISectionModule" url="${service.url.manage}" />
	
	<dubbo:reference id="userLoginModuleImpl" interface="cn.yu2.baomihua.manage.module.IUserLoginModule" url="${service.url.manage}" />
	
	<dubbo:reference id="teachModuleImpl" interface="cn.yu2.baomihua.manage.module.ITeachModule" url="${service.url.manage}" />
	
	<dubbo:reference id="subjectModuleImpl" interface="cn.yu2.baomihua.manage.module.ISubjectModule" url="${service.url.manage}" />
	
	<dubbo:reference id="gradeModuleImpl" interface="cn.yu2.baomihua.manage.module.IGradeModule" url="${service.url.manage}" />

	<dubbo:reference id="staffModuleImpl" interface="cn.yu2.baomihua.manage.module.IStaffModule" url="${service.url.manage}" />
	
	<dubbo:reference id="permissionModuleImpl" interface="cn.yu2.baomihua.manage.module.IPermissionModule" url="${service.url.manage}" />

	<dubbo:reference id="phaseModuleImpl" interface="cn.yu2.baomihua.manage.module.IPhaseModule" url="${service.url.manage}" />
	
