<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="${dubbo.application.name}" logger="slf4j" />
	<!-- 使用zookeeper暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="${dubbo.zookeeper}" />
	<!-- 超时时间和重试次数 -->
	<dubbo:consumer timeout="${dubbo.timeout}" retries="0" lazy="true" check="false" />
	<!-- 用dubbo协议暴露服务 -->
	<dubbo:protocol name="dubbo" port="${dubbo.port}" />

	<!-- manage -->
	<dubbo:reference id="userModule" interface="cn.yu2.baomihua.manage.module.IUserModule" url="${service.url.manage}" />
	
	<dubbo:reference id="schoolModule" interface="cn.yu2.baomihua.manage.module.ISchoolModule" url="${service.url.manage}" />
	
	<dubbo:reference id="deptModule" interface="cn.yu2.baomihua.manage.module.IDeptModule" url="${service.url.manage}" />
	
