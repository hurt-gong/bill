	<dubbo:reference id="statisticsModuleImpl" interface="cn.yu2.baomihua.manage.module.IStatisticsModule" url="${service.url.manage}" />

	<dubbo:reference id="gradeSubjectModuleImpl" interface="cn.yu2.baomihua.manage.module.IGradeSubjectModule" url="${service.url.manage}" />
	
	<dubbo:reference id="personalCenterModuleImpl" interface="cn.yu2.baomihua.manage.module.IPersonalCenterModule" url="${service.url.manage}" />
	
